{
  "name": "weread-toolbox",
  "displayName": "微信读书工具箱",
  "version": "0.0.1",
  "description": "微信读书工具箱，支持导出图文 Markdown 笔记。",
  "author": "三此君",
  "packageManager": "npm@9.6.2",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "plasmo": "0.68.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.227",
    "@types/node": "18.15.11",
    "@types/react": "18.0.32",
    "@types/react-dom": "18.0.11",
    "prettier": "2.8.7",
    "typescript": "5.0.3",
    "@plasmohq/prettier-plugin-sort-imports": "3.6.4",
    "jquery": "^3.6.0",
    "lodash.escaperegexp": "^4.1.2",
    "antd": "5.5.0"
  },
  "manifest": {
    "homepage_url": "https://github.com/sancijun/wereader",
    "permissions": [
      "cookies",
      "storage"
    ],
    "host_permissions": [
      "*://i.weread.qq.com/*",
      "*://weread.qq.com/web/reader/*"
    ]
  }
}
